{
  "name": "backend",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx watch index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/lib/seed.ts seed",
    "db:clean": "tsx src/lib/seed.ts clean",
    "db:seed-test": "tsx src/lib/seed-test-enhanced.ts seed",
    "db:seed-test-heavy": "tsx src/lib/seed-test-enhanced.ts seed '{\"teamsCount\":20,\"usersPerTeam\":100,\"devicesPerTeam\":50,\"telemetryEventsCount\":1000}'",
    "db:seed-fixed": "tsx scripts/seed-fixed-users.ts seed",
    "db:clear-fixed": "tsx scripts/seed-fixed-users.ts clear",
    "db:query": "node --import tsx scripts/db-query.ts",
    "db:seed-basic-rbac": "tsx scripts/seed-basic-rbac.ts seed",
    "db:clear-basic-rbac": "tsx scripts/seed-basic-rbac.ts clear",
    "db:seed-default-roles": "tsx scripts/seed-default-roles.ts seed",
    "db:clear-default-roles": "tsx scripts/seed-default-roles.ts clear",
    "db:verify-roles": "tsx scripts/seed-default-roles.ts verify",
    "keys:generate": "tsx scripts/generate-keys.ts",
    "keys:jwt": "tsx scripts/generate-keys.ts jwt",
    "keys:policy": "tsx scripts/generate-keys.ts policy",
    "keys:rotate": "tsx scripts/rotate-keys.ts",
    "keys:rotate:jwt": "tsx scripts/rotate-keys.ts jwt",
    "keys:rotate:policy": "tsx scripts/rotate-keys.ts policy",
    "keys:rotate:dry": "tsx scripts/rotate-keys.ts --dry-run",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:api": "vitest run tests/integration/",
    "test:teams": "vitest run tests/integration/teams.test.ts",
    "test:users": "vitest run tests/integration/users.test.ts",
    "test:devices": "vitest run tests/integration/devices.test.ts",
    "test:supervisor-pins": "vitest run tests/integration/supervisor-pins.test.ts",
    "test:auth": "vitest run tests/integration/auth.test.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "docs:generate": "tsx scripts/generate-docs.ts",
    "docs:validate": "tsx scripts/generate-docs.ts validate",
    "docs:stats": "tsx scripts/generate-docs.ts stats",
    "docs:serve": "tsx scripts/generate-docs.ts serve"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@types/bun": "latest",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "drizzle-kit": "^0.31.6",
    "eslint": "^9.39.1",
    "oxlint": "^1.28.0",
    "oxlint-tsgolint": "^0.6.0",
    "pg": "^8.16.3",
    "supertest": "^7.1.4",
    "tsx": "^4.20.6",
    "typescript": "^5",
    "vitest": "^4.0.8"
  },
  "dependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^11.0.0",
    "@types/yamljs": "^0.2.34",
    "axios": "^1.13.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "postgres": "^3.4.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tweetnacl": "^1.0.3",
    "uuid": "^13.0.0",
    "yamljs": "^0.3.0",
    "zod": "^4.1.12"
  }
}
